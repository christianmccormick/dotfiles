# general aliases
alias v="nvim"
alias c="clear"
alias rm="rm -i"
alias g="git"
alias cat="bat"

# file listing
alias l="eza --long --header --git"
alias la="l -a"
alias lt="l -T"
alias lta="l -Ta"

# edit and source config files
alias zc="v ~/.zshrc && source ~/.zshrc"
alias pzc="v ~/.private/zshrc && source ~/.zshrc"
alias za="v ~/.zsh/aliases && source ~/.zsh/aliases"
alias zf="v ~/.zsh/functions && source ~/.zsh/functions"
alias gc="v ~/.gitconfig"

# rcup
alias removedotfiles="rcdn"
alias syncdotfiles="rcup -x README.md -x Brewfile -x install.sh -x brewfiles -x tags -x config/nvim.bak -v"
alias rdf=removedotfiles
alias sdf=syncdotfiles

# cds
alias cb="cd .."
alias h="cd ~ && c"
alias dfd="cd ~/.dotfiles"
alias drive="cd ~/Library/Mobile\ Documents"
alias qmkd="cd ~/Code/qmk_firmware"

# homebrew
alias bbmain="brew bundle --file ~/.dotfiles/brewfiles/main --no-upgrade"
alias bbwork="brew bundle --file ~/.dotfiles/brewfiles/work --no-upgrade"
alias bbpersonal="brew bundle --file ~/.dotfiles/brewfiles/personal --no-upgrade"

# utilties
alias freshyarn="rm -r node_modules && yarn"
alias ding="afplay /System/Library/Sounds/Funk.aiff"

# postgresql
alias pgstart="pg_ctl -D /usr/local/var/postgres start"
alias pgstop="pg_ctl -D /usr/local/var/postgres stop"

# ruby
alias be="bundle exec"

# rails
alias rc="rails console"
