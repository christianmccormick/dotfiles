# general aliases
alias v="nvim"
alias c="clear"
alias rm="rm -i"
alias g="git"
alias cat="bat"

# file listing
alias l="exa --long --header --git"
alias la="l -a"
alias lt="l -T"
alias lta="l -Ta"

# edit and source config files
alias zc="v ~/.zshrc && source ~/.zshrc"
alias pzc="v ~/.private/zshrc && source ~/.zshrc"
alias za="v ~/.zsh/aliases && source ~/.zsh/aliases"
alias zf="v ~/.zsh/functions && source ~/.zsh/functions"
alias vc="cd ~/.dotfiles/config/nvim && v init.lua"
alias gc="v ~/.gitconfig"

# rcup
alias syncdotfiles="rcup -x README.md -x Brewfile -x install.sh -x brewfiles -x tags -v"

# cds
alias cb="cd .."
alias h="cd ~ && c"
alias dfd="cd ~/.dotfiles"
alias drive="cd ~/Library/Mobile\ Documents"
alias pcg="cd ~/Code/giving"
alias pca="cd ~/Code/accounts"
alias pcl="cd ~/Code/login"
alias pcgc="cd ~/Code/giving && c"
alias pcac="cd ~/Code/accounts && c"
alias pcal="cd ~/Code/login && c"

# utilties
alias freshyarn="rm -r node_modules && yarn"
alias fy="freshyarn"
alias tailcm="tail -f log/development.log | grep -C3 CM"
alias ding="afplay /System/Library/Sounds/Funk.aiff"

# postgresql
alias pgstart="pg_ctl -D /usr/local/var/postgres start"
alias pgstop="pg_ctl -D /usr/local/var/postgres stop"

# ruby
alias be="bundle exec"

# rails
alias rc="rails console"

